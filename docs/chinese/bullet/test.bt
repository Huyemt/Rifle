function parr( arr ) {
    println( arr[0] + arr[1] )
}

arr := [
    "Hello!",
    "Im a array of the bullet program."
]

// 数组索引访问
parr(arr)

// 数组索引修改
arr[0] = "你好！"
arr[1] = "我是Bullet程序的数组。"

parr(arr)

arr = [[1, 0], [2, 0], [3, 0]]

// 多维数组
arr[0][1] = 1
arr[1][1] = 2
arr[2][1] = 3

// 数组运算
println( arr[0] + arr[1] + arr[2] )