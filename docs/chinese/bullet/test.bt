@ name = "bulletModule"
@ version = "0.0.1"
@ authors = "Huyemt"
@ canBeSelect = false
@ description = "由Huyemt设计的Bullet语言所编写的Rifle模块"
@ website = "http://github.com/Huyemt/Rifle"

@ onLoad {
    println("\n计算n为20的斐波那契数列值 -> " + fibonacci(20) + "\n画高为10的三角形 -> \n" + angle(10))
}

function angle ( n ) {
    angle := "\n"
    for (var i = 1; i <= 10; i += 1) {
        angle += " " * (10 - i) + "*" * (2 * i - 1) + "\n"
    }

    return angle
}

function fibonacci (n) {
    if (n <= 2) return 1

    return fibonacci(n - 1) + fibonacci(n - 2)
}